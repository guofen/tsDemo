{
  "compilerOptions": {
    "target": "es5", // 告诉ts ,要将代码编译成什么版本的
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true, // 用于严格控制空效验
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "noImplicitAny": false, // 允许有隐式的any 类型
  },
  "include": [
    "src"
  ]
}
